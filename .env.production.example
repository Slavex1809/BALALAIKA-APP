# ========================================
# PRODUCTION НАСТРОЙКИ
# ========================================

# БАЗА ДАННЫХ (Production)
# ========================================
DATABASE_URL=postgresql://user:password@prod-db-host:5432/balalalka_prod

# Supabase Production
# NEXT_PUBLIC_SUPABASE_URL=https://prod-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=prod-anon-key

# ВЕБ-ПРИЛОЖЕНИЕ
# ========================================
NEXT_PUBLIC_APP_URL=https://balalalka.app
NEXT_PUBLIC_APP_NAME=BALALAIKA

# Аутентификация
NEXTAUTH_SECRET=strong-production-secret-key-change-this-immediately
NEXTAUTH_URL=https://balalalka.app

# API ключи (Production)
# NEXT_PUBLIC_YANDEX_MAPS_API_KEY=prod-yandex-maps-key
# NEXT_PUBLIC_TELEGRAM_BOT_TOKEN=prod-telegram-bot-token

# МОБИЛЬНОЕ ПРИЛОЖЕНИЕ
# ========================================
EXPO_PUBLIC_APP_NAME=BALALAIKA
EXPO_PUBLIC_API_URL=https://balalalka.app/api

# ПЛАТЕЖИ (Production)
# ========================================
YUKASSA_SHOP_ID=prod_shop_id
YUKASSA_SECRET_KEY=prod_secret_key
YUKASSA_TEST_MODE=false

# ДОСТАВКА (Production)
# ========================================
YANDEX_DELIVERY_API_KEY=prod-delivery-api-key
YANDEX_DELIVERY_CLIENT_ID=prod-client-id

# SMS (Production)
# ========================================
SMS_API_KEY=prod-sms-api-key
SMS_SENDER_NAME=BALALAIKA

# НАСТРОЙКИ
# ========================================
NODE_ENV=production
DEBUG=false

# БЕЗОПАСНОСТЬ
# ========================================
SESSION_SECRET=production-session-secret
COOKIE_SECURE=true
COOKIE_DOMAIN=.balalalka.app

# ЛОГИРОВАНИЕ
# ========================================
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn

# CDN И СТАТИКА
# ========================================
NEXT_PUBLIC_CDN_URL=https://cdn.balalalka.app